const express = require("express");
const router = express.Router();
const { protect } = require("../middleware/authMiddleware");
const { tenantValidator } = require("../middleware/tenantValidator");
const { landlordValidator } = require("../middleware/landlordValidator");
const { brokerValidator } = require("../middleware/brokerValidator");
const {
  createReport,
  getReports,
  updateReport,
  deleteReport,
} = require("../controllers/reportController");

// Routes for reports
router.post(
  "/",
  [landlordValidator, brokerValidator, tenantValidator],
  protect,
  createReport
);
router.get("/:id", [landlordValidator, brokerValidator], protect, getReports);
router.put("/:id", [landlordValidator, brokerValidator], protect, updateReport); // update report status
router.delete(
  "/:id",
  [landlordValidator, brokerValidator],
  protect,
  deleteReport
);

module.exports = router;
